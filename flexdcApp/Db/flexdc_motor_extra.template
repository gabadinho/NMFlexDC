record(motor, "$(P)$(M)")
{
    field(RDBD, "$(RDBD)")
    field(RTRY, "0")
}

record(ao, "$(P)$(M)_MRES_CMD")
{
    field(DESC, "Motor record MRES")
    field(OMSL, "closed_loop")
    field(DTYP, "asynFloat64")
    field(DOL,  "$(P)$(M).MRES CP MS")
    field(OUT,  "@asyn($(PORT),$(ADDR))MOTOR_MRES")
}

