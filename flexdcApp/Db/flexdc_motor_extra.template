    field(ZRST, "EXECUTING")
    field(ZRVL, "0")
    field(ONST, "OK")
    field(ONVL, "1")
    field(TWST, "OTHER2")
    field(TWVL, "2")
    field(THST, "OTHER3")
    field(THVL, "3")
    field(FRST, "OTHER4")
    field(FRVL, "4")
    field(FVST, "FAIL_NO_INDEX")
    field(FVVL, "5")
    field(SXST, "FAIL_MANY_IDXS")
    field(SXVL, "6")
    field(SVST, "OTHER7")
    field(SVVL, "7")
