record(mbbo, "$(P)$(M)_HOMR_CMD")
{
    field(DESC, "HOMR macro")
    field(DTYP, "asynInt32")
    field(VAL,  "$(HOMR)")
    field(ZRST, "Disabled")
    field(ZRVL, "0")
    field(ONST, "HINRI")
    field(ONVL, "1")
    field(TWST, "HINX_")
    field(TWVL, "2")
    field(PINI, "YES")
